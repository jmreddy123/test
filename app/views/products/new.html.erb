<div class="mdl-layout mdl-js-layout mdl-color--black-100">
	<main class="mdl-layout__content">
		<div class="mdl-card mdl-shadow--6dp">
			<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
				<h2 class="mdl-card__title-text">Add Product</h2>
			</div>
			<div class="mdl-card__supporting-text">			
				<%= form_for(@product, remote: true) do |f| %>
					<div class="mdl-textfield mdl-js-textfield mdl-color-text--black">		
						<%= f.text_field :product_name, class:"mdl-textfield__input" %><br />
						<%= f.label :Product, class:"mdl-textfield__label" %>
					</div>
					<div class="mdl-textfield mdl-js-textfield">		
						<%= f.text_field :product_sku, class:"mdl-textfield__input mdl-color-text--black" %><br />
						<%= f.label :SKU , class:"mdl-textfield__label"%>
					</div>
					<div class="mdl-textfield mdl-js-textfield">		
						<%= f.text_field :price, class:"mdl-textfield__input mdl-color-text--black" %><br />
						<%= f.label :Price, class:"mdl-textfield__label"%>
					</div>										
				<%= f.submit class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>    				
				<% end %>						
			</div>			
		</div>
      
	</main>
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
  <thead>
   <tr>
      <th class="mdl-data-table__cell--non-numeric">ProductId</th>
      <th>Product name</th>
      <th>SKU</th>
	  <th>Price</th>	  
    </tr>
  </thead>
  <tbody id="productstable"> </tbody> 

</table>

</div>
  
